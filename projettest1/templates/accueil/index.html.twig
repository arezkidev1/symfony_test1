{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

	<div id="carouselExampleInterval" class="my-5 mt-5 carousel carousel-dark defil-carousel slide" data-bs-ride="carousel">
		<div class="carousel-inner">
			<div class="carousel-item active" data-bs-interval="10000">
				<img src="/images/acoustique_2.jpg" class="defil d-block " alt="...">
			</div>
			<div class="carousel-item" data-bs-interval="2000">
				<img src="/images/electrique_2.jpg" class="defil d-block " alt="...">
			</div>
			<div class="carousel-item">
				<img src="/images/synthe_2.jpg" class="defil d-block " alt="...">
			</div>
			<div class="carousel-item">
				<img src="/images/piano_2.jpg" class="defil d-block " alt="...">
			</div>
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>

	<div class="container">
		<div class="col mb-2 text-center">
			<h2>Cat√©gories</h2>
		</div>
		<div class="row">
			<div class="col-2"></div>
			{% for categorie in categories %}
				{% if categorie.parentCategorie == null %}
					<div class="col-4">
						<a href="{{path('app_souscategorie', {categorie : categorie.id }) }}">
							<img class="img-fluid" src="/images/{{ categorie.image }}">
							<div class="text-center">
								{{ categorie.name}}
							</div>

						</a>
					</div>
				{% endif %}
			{% endfor %}
		</div>
	</div>


{% endblock %}
