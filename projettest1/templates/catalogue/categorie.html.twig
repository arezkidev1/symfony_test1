{% extends 'base.html.twig' %}

{% block title %}Hello categorie{% endblock %}

{% block body %}

 <div class="container">
        <div class="row">
                {% for categorie in categories %}
                {% if categorie.parentCategorie == null %}
                    <div class="col-4">
                    <a href="{{path('app_souscategorie', {'categorie' : categorie.id }) }}">
                        <img class="img-fluid" src="https://picsum.photos/300/200" >
                        <div class="text-center">
                        {{ categorie.name}}
                        </div>
                    </a>
                    </div>
                    {% endif %}
                {% endfor %}
        </div>
    </div>


{% endblock %}
